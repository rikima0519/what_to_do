

<div class="topPage">
  <div class="listWrapper">
  <% if @lists.blank? %>
      <div class="nothing"><%= "まだリストはありません" %></div>
  <% else %>
    <% @lists.each do |list| %>
        <div class="list">

        <%#<div class="list_header"> %>
          <h2 class="list_header_title"><%= link_to list.title, edit_list_path(list) %></h2>
          <div class="by-day"><%= list.day %></div>
          <div class="list_destroy"><%= link_to "終わった？", list_path(list.id), method: :delete %></div>
        <%#</div> %>

      </div>
    <% end %>
  <% end %>
  </div>
</div>


